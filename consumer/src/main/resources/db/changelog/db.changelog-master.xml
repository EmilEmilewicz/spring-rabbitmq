<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="asadganiev" id="uuid-ossp-extension">
        <sql dbms="postgresql"
             endDelimiter="\nGO"
             splitStatements="true"
             stripComments="true">CREATE EXTENSION IF NOT EXISTS "uuid-ossp";
        </sql>
    </changeSet>

    <changeSet author="asadganiev" id="enum">
        <sql dbms="postgresql"
             endDelimiter="\nGO"
             splitStatements="true"
             stripComments="true">CREATE TYPE EVENT_TYPE AS ENUM ('START', 'FINISH');
        </sql>
    </changeSet>

    <changeSet author="asadganiev" id="consumer-1">
        <preConditions onFail="CONTINUE" onError="CONTINUE">
            <not>
                <tableExists tableName="events"/>
            </not>
        </preConditions>
        <createTable tableName="events">
            <column defaultValueComputed="uuid_generate_v4()" name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="events_pkey"/>
            </column>
            <column name="event_type" type="EVENT_TYPE">
                <constraints nullable="false"/>
            </column>
            <column name="capacity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="context" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
